---
import Layout from "@layouts/Layout.astro";
import { Header, Footer } from "mee-components";
import { header, footer, globalPrivacyControlLink } from "../config";
import ChromeStoreBadge from "@components/ChromeStoreBadge.astro";

const benefits = [
  {
    title: "Privacy",
    description:
      "Your online activities are free from surveillance by third-party cookies and trackers.",
    image: "/images/privacy-benefit.svg",
    imageDark: "/images/privacy-benefit-dark.svg",
  },
  {
    title: "Control",
    description:
      "Mee Extension automatically opts you out of your data being shared/sold by websites.",
    image: "/images/control-benefit.svg",
    imageDark: "/images/control-benefit-dark.svg",
  },
  {
    title: "Convenience",
    description:
      `It automatically sends the <a href='${globalPrivacyControlLink}' target='_blank' class='text-brand-600 underline dark:text-brand-300'>Global Privacy Control</a> “opt out” signal to every website you visit. All you have to do is install it—nothing else to do!`,
    image: "/images/convenience-benefit.svg",
    imageDark: "/images/convenience-benefit-dark.svg",
  },
];
---

<Layout title="Mee Extension">
  <Header header={header} location="Mee Extension" />
  <main class="">
    <article
      class="relative flex h-full min-h-screen w-screen flex-col items-center gap-16 overflow-hidden pt-27"
    >
      <section
        class="section top-0 z-100 mb-3.5 mt-16 flex w-screen max-w-7xl flex-col items-center justify-center md:mt-25"
      >
        <div
          class="flex max-w-150 flex-col items-center justify-center gap-6 px-6 transition-opacity duration-500 md:p-0"
        >
          <img src="/images/extension.svg" class="dark:hidden" alt="illustration"/>
          <img src="/images/extension-dark.svg" class="hidden dark:block" alt="illustration"/>
          <h1
            class="marker text-center text-4xl font-semibold text-gray-900 lg:text-7xl lg:tracking-0.02 dark:text-grey-50"
          >
            Mee Extension
          </h1>
          <h2
            class="text-center text-xl tracking-0.02 text-gray-800 md:text-2xl lg:text-3xl dark:text-grey-100"
          >
            This extension automatically tells every website you visit not to sell/share your personal data. It’s as simple as that!
          </h2>
        </div>
      </section>
      <section
        class="relative my-28 flex w-screen max-w-7xl flex-col items-center justify-center pt-28"
      >
        <div class="z-10 flex flex-col items-center justify-center px-6">
          <div class="flex w-screen max-w-7xl">
            <div class="flex items-stretch justify-center gap-4 p-8">
              {
                benefits.map((benefit) => (
                  <div class="flex max-w-100 flex-col rounded-2xl border border-grey-300 transition-all dark:border-grey-600">
                    <img
                      src={benefit.image}
                      class="w-full rounded-t-2xl dark:hidden"
                      alt={`${benefit.title}`}
                    />
                    <img
                      src={benefit.imageDark}
                      class="hidden w-full rounded-t-2xl dark:block"
                      alt={`${benefit.title}`}
                    />

                    <div class="flex h-full flex-col justify-between">
                      <div class="flex flex-col justify-between gap-2 p-8 pt-0">
                        <div class="flex items-center gap-2 text-left text-xl font-semibold text-grey-900 lg:text-2xl dark:text-grey-50">
                          {benefit.title}
                        </div>
                        <div class="text-sm text-grey-800 lg:text-base dark:text-grey-200" set:html={benefit.description}>
                        </div>
                      </div>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </section>
      <section
        class="section-bg animation-delay-800 relative -mb-60 mt-16 flex w-screen flex-col items-center gap-14 px-10 pb-80 text-white md:gap-20 lg:gap-24"
      >
        <div class="section-bg-image absolute h-full w-full max-w-7xl"></div>
        <div class="z-70 flex flex-col items-center gap-16">
          <div class="flex flex-col items-center gap-4 pt-40">
            <h2
              class="text-center text-3xl font-bold leading-thick md:text-4xl md:leading-normal lg:text-5xl"
            >
              Gain some privacy and peace of mind.
            </h2>
            <h3
              class="text max-w-3xl text-pretty px-6 text-center text-xl md:text-2xl"
            >
              Available for Chrome browser. Support for other browsers is
              planned.
            </h3>
          </div>
          <div class="mt-20 flex w-full flex-wrap items-center justify-center">
            <ChromeStoreBadge buttonType="secondary" />
          </div>
        </div>
      </section>

      <Footer mode="dark" footer={footer} />
    </article>
  </main>
</Layout>
<style is:global>
  .section-bg {
    background: linear-gradient(180deg, #0f172a 0%, #334155 81.32%);
  }
  .section-bg-image::after {
    content: "";
    max-width: 80rem;
    width: 100%;
    height: 100%;
    background: url("/images/stars.svg") no-repeat;
    position: absolute;
    display: inline-block;
    left: 0;
    top: 3.2rem;
    background-size: 100% 100%;
  }
</style>
